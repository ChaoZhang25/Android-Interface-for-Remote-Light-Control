<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="52dp"
        android:layout_y="40dp"
        android:src="@drawable/light_off" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:layout_x="42dp"
        android:layout_y="141dp"
        android:src="@drawable/fan_off" />
    
     <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:layout_x="60dp"
        android:layout_y="322dp"
        android:src="@drawable/curtain_off" />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dp"
        android:layout_x="160dp"
        android:layout_y="60dp"
        android:text="开关灯光" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="165dp"
        android:layout_y="179dp"
        android:text="风速:0"
        android:textColor="#696969"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:layout_marginBottom="25dp"
        android:layout_x="50dp"
        android:layout_y="240dp" />

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="240dp"
        android:layout_y="335dp"
        android:background="#FFFFFF"
        android:src="@drawable/down" />

    <ImageButton
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="197dp"
        android:layout_y="340dp"
        android:background="#FFFFFF"
        android:src="@drawable/stop5" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="140dp"
        android:layout_y="335dp"
        android:background="#FFFFFF"
        android:src="@drawable/up" />
   
</AbsoluteLayout>